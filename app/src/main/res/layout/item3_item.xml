<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/item3"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/image_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="20px"
        android:id="@+id/tvContent_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_margin="10px"
        android:layout_width="match_parent"
        android:layout_height="60px">
        <ImageView
            android:layout_marginLeft="40px"
            android:id="@+id/titleimg_item3"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/titleimg1" />
        <TextView
            android:id="@+id/tvNum1_item3"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/titleimg_item3"
            android:text="aaaa" />
        <ImageView
            android:id="@+id/imagecare_item3"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@id/tvNum1_item3"
            android:src="@mipmap/care"
            android:layout_width="50px"
            android:layout_height="50px" />

        <TextView
            android:id="@+id/tvNum2_item3"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imagecare_item3"
            android:layout_toRightOf="@id/imagecare_item3"
            android:text="aaaa" />
        <TextView
            android:layout_marginLeft="50px"
            android:id="@+id/tvDate_i3"
            android:layout_toRightOf="@id/tvNum2_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.v.gyyx.customviews.AddCareView
            android:id="@+id/image_addcare_i1"
            android:layout_marginRight="100px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="100px"/>
</LinearLayout>