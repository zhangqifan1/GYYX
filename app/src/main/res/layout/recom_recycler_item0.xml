<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_i0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <TextView
        android:textColor="#000"
        android:id="@+id/text_i0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40px"
        android:text="aaa" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="40px"
                android:id="@+id/titleimg1"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/titleimg1" />
            <TextView
                android:id="@+id/tvNum1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/titleimg1"
                android:text="aaaa" />
            <ImageView
                android:id="@+id/imagecare"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@id/tvNum1"
                android:src="@mipmap/care"
                android:layout_width="50px"
                android:layout_height="50px" />

            <TextView
                android:id="@+id/tvNum2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imagecare"
                android:layout_toRightOf="@+id/imagecare"
                android:text="aaaa" />
            <TextView
                android:layout_marginLeft="50px"
                android:id="@+id/tvDate"
                android:layout_toRightOf="@id/tvNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.v.gyyx.customviews.AddCareView
                android:id="@+id/image_addcare"
                android:layout_marginRight="100px"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="100px"/>
</LinearLayout>