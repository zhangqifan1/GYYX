<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Logweb2_RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_login"
    tools:context="com.v.gyyx.fragment.LogWeb2Fragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_weight="1"
            android:src="@mipmap/phone" />

        <ImageView
            android:id="@+id/imgWeixin"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_weight="1"
            android:src="@mipmap/weixin" />

        <ImageView
            android:id="@+id/imgQQ"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_weight="1"
            android:src="@mipmap/qq" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:text="微信"
        android:textColor="#f3000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="QQ"
        android:textColor="#f3000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:text="手机号"
        android:textColor="#f3000000"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150px"
        android:text="选择登录方式"
        android:textColor="#fe000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="500px"
        android:text="游客登录" />
</RelativeLayout>
